%table.table
  %thead
    %tr
      %th= t(:name)
      %th= t(:tags)
      %th
  %tbody
    - @sub_categories.each do |category|
      %tr
        %td
          = link_to category_path(category.id) do
            %i.fa.fa-folder
            %span= category.name
        %td
          = category.tags.join(', ')
        %td
          = link_to t(:move), "#", class: 'badge badge-info', 'data-toggle' => :modal, 'data-target' => "#category-modal", 'data-id' => category.id, 'data-type' => 'category'
          \/
          = link_to t(:edit), edit_category_path(id: category.id), class: 'badge badge-info'
    - @sops.each do |sop|
      %tr
        %td
          = link_to sop_path(sop) do
            %i.far.fa-file
            %span= sop.name
        %td
          = sop.tags.join(', ')
        %td
          = link_to t(:move), "#", class: 'badge badge-info', 'data-toggle' => :modal, 'data-target' => "#category-modal", 'data-id' => sop.id, 'data-type' => 'sop'
          \/
          = link_to t(:edit), edit_sop_path(id: sop.id), class: 'badge badge-info'
          \/
          = link_to t(:delete), sop_path(id: sop.id), method: :delete, class: 'badge badge-danger', :data => {confirm: t(:confirm_delete, resource: 'sop')}


