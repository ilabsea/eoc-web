#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      %h3 Category
      %ul.navbar-nav.ml-auto
        %li.nav-item.mr-sm-2
          = link_to new_category_path(parent_id: @category.id), class: 'btn btn-primary' do
            %i.fas.fa-plus
        %li.nav-item
          = link_to "#", class: 'btn btn-danger' do
            %i.fas.fa-file-archive
  %nav{ 'aria-label' => 'breadcrumb' }
    %ol.breadcrumb
      %li.breadcrumb-item
        = link_to 'Root', categories_path
      %li.breadcrumb-item.active{ 'aria-current' => 'page' } Data

  %div Name
  .list-group
    - @sub_categories.each do |category|
      = link_to category_path(category.id), class: 'list-group-item list-group-item-action' do
        %span
          %i.fa.fa-folder
        %span= category.name

    - @sops.each do |sop|
      = link_to '#', class: 'list-group-item list-group-item-action' do
        %span
          %i.far.fa-file
        %span= sop.name
