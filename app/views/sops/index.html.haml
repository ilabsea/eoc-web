#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      %h3 Sop
      = link_to new_sop_path, class: 'btn btn-primary' do
        %i.fas.fa-plus

  - if @sops.present?
    %table.table.table-hover.medium-width
      %thead
        %tr
          %th Name
          %th Tags
          %th File
          %th Category
          %th

      %tbody
        - @sops.each do |sop|
          %tr
            %td= sop.name
            %td= sop.tags
            %td
              - if sop.file.present?
                = link_to download_sops_path(file: sop.file_url), target: "_blank", style:'color: #007bff' do
                  %span= sop.file_url.split('/').last
                  %i.fas.fa-download

            %td= sop.category.try(:name)
            %td
              = link_to 'Edit', edit_sop_path(sop), class: 'badge badge-info'
              = "/"
              = link_to 'Delete', sop_path(sop), method: :delete, class: 'badge badge-danger', :data => {confirm: 'Are you sure to delete this sop?'}
