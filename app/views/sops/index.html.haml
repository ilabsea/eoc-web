#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      %h3 Sop
      %ul.navbar-nav.ml-auto
        %li.nav-item.mr-sm-2
          = link_to new_sop_path, class: 'btn btn-primary' do
            %i.fas.fa-plus
        %li.nav-item
          = link_to upload_sops_path, class: 'btn btn-primary' do
            %i.fas.fa-file-archive

  - if flash[:notice]
    .alert.alert-primary.mb-5.medium-width{role: 'alert'}
      = flash[:notice]
  
  = form_with(url: sops_path, method: "get") do
    .form-row.medium-width
      .col-auto
        .form-group
          = text_field_tag(:keyword, '', class: 'form-control')
      .col-auto
        = submit_tag("Search", class: 'btn btn-light')

  - if @sop_highlights.present?
    %table.table.table-hover.medium-width
      %thead
        %tr
          %th Name
          %th Tags
          %th File
          %th Category
          %th

      %tbody#body-content
        = render 'sops'
