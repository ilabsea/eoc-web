%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container-fluid
    %h3= t(:search)
    = render 'shared/search_form'
    .ml-auto

- if @results.size.positive?
  %table.table.table-hover
    %thead
      %tr
        %th= t(:name)
        %th= t(:tags)
        %th

    %tbody#body-content
      - @results.each do |result|
        - if result.instance_of? Category
          = render 'category_result', result: result
        - else
          = render 'sop_result', result: result
- if @pagy.pages > 1
  .pagy-wrapper.d-flex.justify-content-center
    != pagy_bootstrap_nav(@pagy)

